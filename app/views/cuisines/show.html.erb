<h1> <%= @cuisine.name %> </h1>

<% if @cuisine.recipes.empty? %>
  <p>Nenhuma receita encontrada para este tipo de cozinha</p>
<% end %>

<% @cuisine.recipes.each do |r| %>
  <h1><%= link_to(r.title, r) %></h1>
  <ul>
    <li><%= r.recipe_type %></li>
    <li><%= r.cuisine.name %></li>
    <li><%= r.difficulty %></li>
    <li><%= r.cook_time %> minutos</li>
  </ul>
<% end %>
