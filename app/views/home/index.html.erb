<h1>CookBook</h1>
<p>Bem-vindo ao maior livro de receitas online</p>

<% @recipes.each do |r| %>
  <h1><%= link_to(r.title, r) %></h1>
  <ul>
    <li><%= r.recipe_type.name %></li>
    <li><%= r.cuisine.name %></li>
    <li><%= r.difficulty %></li>
    <li><%= r.cook_time %> minutos</li>
  </ul>
<% end %>

<% @cuisines.each do |c| %>
  <%= link_to(c.name, c)%>
<% end %>

<% @recipe_types.each do |recipe_type| %>
  <%= link_to recipe_type.name, recipe_type %>
<% end %>

<%=link_to "Enviar uma receita", new_recipe_path%>
